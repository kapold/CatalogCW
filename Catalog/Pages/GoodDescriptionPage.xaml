<Page x:Class="Catalog.Pages.GoodDescriptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Catalog.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="500"
      Title="Описание товара">

    <Grid Background="White">

        <Image x:Name="imageDescription" Margin="30,20,0,0" Width="200" Height="230" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Rectangle Height="318" Margin="10,272,10,0" Fill="#abcdef" Stroke="{x:Null}" VerticalAlignment="Top" RadiusX="20" RadiusY="20"/>
        <TextBlock x:Name="goodNameDescription" HorizontalAlignment="Left" Height="229" Margin="250,30,0,0" TextWrapping="Wrap" Text="GoodName" VerticalAlignment="Top" Width="220" FontFamily="Century Gothic" FontSize="36" FontWeight="Bold" FontStyle="Normal"/>

        <TextBlock x:Name="fullDecription" FontSize="14" FontFamily="Century Gothic" Padding="40,20,0,0" HorizontalAlignment="Left" Height="318" Margin="10,272,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="480"/>



    </Grid>

</Page>
